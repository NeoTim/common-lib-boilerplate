{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./lib",
    "target": "es5",
    "lib": ["es7", "dom"],
    "experimentalDecorators": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "exclude": [ "node_modules", "lib"]

}
